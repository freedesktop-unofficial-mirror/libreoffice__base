        Text [ en-US ] = "User \"$name$:  $\"";
    };

    FixedText FT_OLDPASSWORD
    {
        Pos = MAP_APPFONT ( 6 , 17 ) ;
        Size = MAP_APPFONT ( FT_SIZE_X , 10 ) ;
        Text [ de ] = "Altes K~ennwort" ;
        Text [ en-US ] = "Old p~assword";
    };
